
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /patient                      com.ceiba.controllers.PatientController.list()
GET     /patient/:id                  com.ceiba.controllers.PatientController.consult(id:Long)
POST    /patient                      com.ceiba.controllers.PatientController.create()
PUT     /patient                      com.ceiba.controllers.PatientController.upgrade()
DELETE  /patient/:id                  com.ceiba.controllers.PatientController.delete(id:Long)

GET     /swagger.json                 controllers.ApiHelpController.getResources


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

      